<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_width="200dp"
    android:layout_height="300dp"
    app:cardCornerRadius="10dp"
    android:layout_marginLeft="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_bebida"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/delirium"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <View
            android:id="@+id/text_group"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"/>

        <TextView
            android:id="@+id/name_bebida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/image_bebida"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_group"
            app:layout_constraintVertical_bias="0.0"
            android:gravity="center"
            tools:text="Delirium Argentum"/>

        <TextView
            android:id="@+id/description_bebida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8492A6"
            android:textSize="8dp"
            app:layout_constraintTop_toBottomOf="@+id/name_bebida"
            tools:layout_editor_absoluteX="0dp"
            tools:text="Uma Belgian IPA especial com 6 diferentes tipos de lúpulo, malte de cevada tostado e malte de trigo resultando em 7.0% de teor alcóolico e 49 IBU's."/>

        <TextView
            android:id="@+id/price_bebida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8492A6"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@+id/description_bebida"
            tools:layout_editor_absoluteX="16dp"
            tools:text="R$ 49,90"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>